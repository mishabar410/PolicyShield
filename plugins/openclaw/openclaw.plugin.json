{
    "id": "policyshield",
    "configSchema": {
        "type": "object",
        "properties": {
            "url": {
                "type": "string",
                "default": "http://localhost:8100"
            },
            "mode": {
                "enum": [
                    "enforce",
                    "audit",
                    "disabled"
                ],
                "default": "enforce"
            },
            "fail_open": {
                "type": "boolean",
                "default": true
            },
            "timeout_ms": {
                "type": "number",
                "default": 5000
            }
        }
    }
}